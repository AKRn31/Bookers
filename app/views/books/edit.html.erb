<h1>Editing Book</h1>
<div class="message">
<% if @book.errors.any? %>
 <div class="error"><%= @book.errors.count %> error prohibited this book from being saved</div>
  <div class="error-message">
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>
</div>


<%= form_for @book do |f| %>
 <div class="new">
   <p>Title</p>
   <%= f.text_field :title %>
   <p>Body</p>
   <div class="text-area"> 
   <%= f.text_area :body %>
   </div>
   <div class="bottan">
  <%= f.submit 'Update Book' %>
   </div>
 </div>
  <% end %>
 
 <div class="movie">
  <div class="move-link">
  <%= link_to "Show",book_path(params[:id]) %>
