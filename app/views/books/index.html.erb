<h1>Books</h1>
  <% @books.each do |book| %>
  <p>Title</p>
  <span><%= book.title %></span>
  <% end %>

  <% @books.each do |book| %>
  <p>Body</p>
  <span><%= book.body %></span>
  <% end %>

  <% @books.each do |book| %>
  <%= link_to 'Show',book_path(book.id) %>
  <%= link_to 'Edit',edit_book_path(book.id) %>
  <%= link_to 'Destroy',books_path(book), method: :delete,"date-confirm" =>'Are You Sure?' %>
  
  <% end %>


<h1>New book</h1>
<% if @book.errors.any? %>
  
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model:Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>
