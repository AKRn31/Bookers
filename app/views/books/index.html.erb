<h1>Books</h1>
  <% @books.each do |book| %>
  <p>Title</p>
  <span><%= book.title %></span>
  <% end %>

  <% @books.each do |book| %>
  <p>Body</p>
  <span><%= book.body %></span>
  <% end %>

  <% @books.each do |book| %>
  <%= link_to 'Show', book %>
  <%= link_to 'Edit',edit_book_path(book) %>
  <%= link_to 'Destroy',book, methood: :delete,date:{ confirm:'Are you sure?' } %>
  <% end %>


<h1>New book</h1>

<%= form_with model:Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>
